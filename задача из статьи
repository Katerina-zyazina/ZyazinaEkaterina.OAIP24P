import os

file_path = 'todo_list.txt'

# 1. –°–û–ó–î–ê–ù–ò–ï –ò –ó–ê–ü–ò–°–¨
with open(file_path, 'w', encoding='utf-8') as file:
    file.write('=== –ú–û–ô –°–ü–ò–°–û–ö –î–ï–õ ===\n')
    file.write('1. –°–¥–µ–ª–∞—Ç—å –∑–∞—Ä—è–¥–∫—É\n')
    file.write('2. –ü–æ–∑–∞–≤—Ç—Ä–∞–∫–∞—Ç—å\n')
    file.write('3. –ü–æ—á–∏—Ç–∞—Ç—å –∫–Ω–∏–≥—É\n')

if os.path.exists(file_path):
    print("‚úÖ –§–∞–π–ª —Å–æ–∑–¥–∞–Ω:", file_path)

# 2. –î–û–ë–ê–í–õ–ï–ù–ò–ï
with open(file_path, 'a', encoding='utf-8') as file:
    file.write('4. –í—ã—É—á–∏—Ç—å Python\n')
    file.write('5. –ù–∞–ø–∏—Å–∞—Ç—å –∫–æ–¥\n')
    file.write('6. –°–¥–µ–ª–∞—Ç—å –ø–µ—Ä–µ—Ä—ã–≤\n')
print("‚ûï –ó–∞–¥–∞—á–∏ –¥–æ–±–∞–≤–ª–µ–Ω—ã")

# 3. –ß–¢–ï–ù–ò–ï
print("\nüìã –°–æ–¥–µ—Ä–∂–∏–º–æ–µ —Ñ–∞–π–ª–∞:")
with open(file_path, 'r', encoding='utf-8') as file:
    # –ß–∏—Ç–∞–µ–º –ø–æ—Å—Ç—Ä–æ—á–Ω–æ —á–µ—Ä–µ–∑ —Ü–∏–∫–ª
    for line in file:
        print(line.strip())

# 4. –ü–û–î–°–ß–Å–¢ –ó–ê–î–ê–ß
with open(file_path, 'r', encoding='utf-8') as file:
    lines = file.readlines()
    task_count = len(lines) - 1  # –º–∏–Ω—É—Å –∑–∞–≥–æ–ª–æ–≤–æ–∫
    print(f"\nüìä –í—Å–µ–≥–æ –∑–∞–¥–∞—á: {task_count}")

# 5. –û–¢–ö–†–´–¢–ò–ï –í –ë–õ–û–ö–ù–û–¢–ï (–¥–ª—è Windows)
os.system(f'notepad "{file_path}"')
if __name__ == "__main__":
    main()
